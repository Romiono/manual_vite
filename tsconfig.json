{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2022",

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,

        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",

        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["vite/client", "some-other-global-lib", "node"]
    }
}
